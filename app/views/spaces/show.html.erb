<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @space.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @space.user.name %>
</p>

<p>
  <strong>Type:</strong>
  <%= @space.spacetype %>
</p>

<p>
  <strong>Streetnum:</strong>
  <%= @space.streetnum %>
</p>

<p>
  <strong>Street:</strong>
  <%= @space.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @space.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @space.state %>
</p>

<p>
  <strong>Areacode:</strong>
  <%= @space.areacode %>
</p>

<p>
  <strong>Price:</strong>
  <%= @space.price %>
</p>

<p>
  <strong>Vacancies:</strong>
  <%= @space.vacancies %>
</p>

<p>
  <strong>Description:</strong>
  <%= @space.description %>
</p>

<p>
  <strong>Avg Rating:</strong>
  <%= rating_for @space, "reputation", :disable_after_rate => true, :cancel => false, :half_show => true %>
</p>

<%= image_tag @space.avatar.url %>

<% if current_user == @space.user %>
  <%= link_to 'Edit', edit_space_path(@space) %> |
  <%= link_to 'Destroy', @space, method: :delete, data: { confirm: 'Are you sure?' } %> | 
<% end%>
<%= link_to 'Back', spaces_path %>

<h2>Apply to lease</h2>
<%= form_for([@space, @space.leases.build]) do |f| %>
  <div class="field">
      <%= f.label :startdate %><br>
      <%= f.datetime_select :startdate %>
    </div>
    <div class="field">
      <%= f.label :enddate %><br>
      <%= f.datetime_select :enddate %>
    </div>
    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
 
<%= link_to 'Back', leases_path %> |
