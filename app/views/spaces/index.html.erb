<h1>Listing spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Streetnum</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Areacode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.type %></td>
        <td><%= space.streetnum %></td>
        <td><%= space.street %></td>
        <td><%= space.city %></td>
        <td><%= space.state %></td>
        <td><%= space.areacode %></td>
        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

