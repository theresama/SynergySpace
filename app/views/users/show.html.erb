<main class="page">

	<div class="profile-wrapper autoflow">
		<div class="col-md-6">
			<div class="panel panel-default">
		        <div class="panel-heading" style="overflow:auto;">
		    		<h3 class="panel-title" style="float:left;"><%= @user.name %></h3>
		    		<span style="float:right;"><%= rating_for @user, "reputation", :disable_after_rate => true, :cancel => false, :half_show => true %></span>
		    	</div>
				<div class="panel-body">
					<img class="user-avatar" src="<%= @user.avatar %>">
					<div class="label-container">
					    <span class="user-label">Email:</span> <%= @user.email %><br />
					    <span class="user-label">Title:</span> <%= @user.occupation %>
					    <p class="keywords">
					    	<span class="user-label">Skills/Interest tags:</span>
					    	
					    		<% @user.tag_list.each do |keyword| %>
						    	 <span class="keywordtag"><%= keyword %></span>
						    	<% end %>
					    </p>
					</div>
				</div>
			</div>
		</div>


	      <div class="col-md-6">
	        <% if @owns.count != 0 %>
	  	      <div class="panel panel-default">
	  	        <div class="panel-heading">
	  	          <h3 class="panel-title">Owns:</h3>
	  	        </div>
	  	        <div class="panel-body">
	            	    <% @owns.each do |space| %>
	            	    	<a href="/spaces/<%= space.id %>">
	            	    		<p><%= space.name %></p>
	            	    	</a>
	            	    <% end %>        
	  	        </div>
	  	      </div>
	        <% end %>
	        
	        <% if @social.count != 0 %>
	          <div class="panel panel-default">
	            <div class="panel-heading">
	              <h3 class="panel-title">Social Circle</h3>
	            </div>
	            <div class="panel-body">
	              <% @social.each do |u| %>
	      	        	<a href="/users/<%= u.id %>">
	      	        		<p><%= u.name %></p>
	      	        	</a>
	      	        <% end %>   
	            </div>
	          </div>
	        <% end %>
	        
	      </div>

	</div>

</main>

<% if @coworker == false %>
	<script>
		$(function(){
			setTimeout(function(){
		      $(".star > img").unbind('mouseout mouseover click hover');
		      $(".star").css("cursor", "default");
		    },500) 
		})
	</script>
<% end %>

