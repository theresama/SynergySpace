
<div class="profile-wrapper">
	<div class="person">
	  <div class="Media">
	    <div class="Media-figure" >
	    	<img src="holder.js/300x300/social" alt="">
	    	<%= image_tag @user.avatar.url %>

	    	<!-- <input name="tags" id="tags" value="foo,bar,baz" /> -->



	    </div>
	    <div class="Media-body">
	      <h4 class="username"><%= @user.name %></h4>
	      <p>
	      	<span class="info">Reputation:</span>
	      	<%= rating_for @user, "reputation", :disable_after_rate => true, :cancel => false, :half_show => true %>
	      </p>
	      <p><span class="info">Email:</span><%= @user.email %></p>
	    </div>
	  </div>
	</div>
</div>

<script>
	$(function(){
		$('#tags').tagsInput();
	})
</script>