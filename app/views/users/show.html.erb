<main class="page">


	<div class="jumbotron">
	  <h1><%= @user.name %></h1>
	  
	  <p>
	  	<%= @user.occupation %>
	  </p>
	</div>

	<div class="profile-wrapper autoflow">
	  <div class="col-md-12">
	    <div class="col-md-6">
	      <p>
	        <strong>Email:</strong>
	        <%= @user.email %>
	      </p>

			<p>
				<span class="info">Reputation:</span>
				<%= rating_for @user, "reputation", :disable_after_rate => true, :cancel => false, :half_show => true %>
			</p>
	    </div>
	    <div class="col-md-6">
	      <%= image_tag @user.avatar.url, :class => "user-photo"%>
	    </div>
	  </div>

	</div>


</main>


<script>
	$(function(){
		$('#tags').tagsInput();
	})
</script>