<%= form_for(@lease) do |f| %>
  <% if @lease.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@lease.errors.count, "error") %> prohibited this lease from being saved:</h2>

      <ul>
      <% @lease.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @lease.user == current_user %>
    <div class="field">
      <%= f.label :startdate %><br>
      <%= f.datetime_select :startdate %>
    </div>
    <div class="field">
      <%= f.label :enddate %><br>
      <%= f.datetime_select :enddate %>
    </div>
    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <% else %>
      
    <div class="actions">
      <%= f.hidden_field :accepted, :value => "true" %>
      <%= f.submit "Approve Application" %>
    </div>
  <% end %>

  
<% end %>
