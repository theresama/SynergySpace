<h1>Listing leases</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Space</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Message</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leases.each do |lease| %>
      <tr>
        <td><%= lease.user %></td>
        <td><%= lease.space %></td>
        <td><%= lease.startdate %></td>
        <td><%= lease.enddate %></td>
        <td><%= lease.message %></td>
        <td><%= lease.accepted %></td>
        <td><%= link_to 'Show', lease %></td>
        <td><%= link_to 'Edit', edit_lease_path(lease) %></td>
        <td><%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lease', new_lease_path %>
